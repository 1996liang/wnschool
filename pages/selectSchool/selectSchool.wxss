/* pages/selectSchool/selectSchool.wxss */

.selectSchool {
  /*text-align: center;*/
  position: fixed;
  top: 10%;
  bottom: 10%;
  left: 10%;
  right: 10%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 5;
    background-color: white;
}

.selectSchool text {
  margin-top: 55rpx;
  font-size: 32rpx;
  color: #7d7b7b;
  font-weight: bold;
}

.selectSchool input {
  margin-top: 55rpx;
  padding-top: 30rpx;
padding-bottom: 30rpx;
  padding: 0;
  padding-left:15rpx; 
  border: 2rpx solid #f2f2f2;
  width: 70%;
  font-size: 30rpx;
    letter-spacing: 1px;
}

.selectSchool image {
  width: 100rpx;
  height: 100rpx;
}

.selectSchool button {
  width: 60%;
  margin-top: 30rpx;
  font-weight: bold;
}

.selectSchool .scroll {
  width: 70%;
  height: 250rpx;
  border-bottom: 2rpx solid #B6B5B5;
    border-left: 2rpx solid #B6B5B5;
      border-right: 2rpx solid #B6B5B5;
}

.selectSchool .input {
  height: 1.4rem;
  width: 100%;
  margin: 0 auto;
  font-size: 32rpx;
  color: #7d7b7b;
  display: flex;
  justify-content:center;
  align-items: center;
  letter-spacing: 1px;
  border-bottom: 2rpx solid #f2f2f2;
  padding-top: 20rpx;
  padding-bottom:20rpx;
}
.mengban {
  position: fixed;
  top: 0%;
  width: 100%;
  height: 1500rpx;
  background-color: grey;
  z-index: 1;
  opacity: 0.3;
}